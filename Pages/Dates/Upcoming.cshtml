@model List<devfestweekend.Models.Date>

<div class="upcoming-events gb-section text-center">
    <div class="container">
        <div class="title-section">
            <h1 class="color-red">
                <span class="before-top"></span>
                <span>Upcoming Dates</span>
                <span class="before-bottom"></span>
            </h1>
        </div>
        <div class="event-content">
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var date in Model)
                    {
                        <div class="col-sm-6 col-md-3">
                            <div class="event">
                                <div class="gb-time color-red">
                                    <p>@date.When.Day <span>@date.When.ToString("MMM")</span></p>
                                </div>
                                <div class="event-info">
                                    <h2>@date.Title</h2>
                                    @if (!string.IsNullOrWhiteSpace(date.Address))
                                    {
                                        <address><p>@date.Address</p></address>
                                    }
                                    else
                                    {
                                        <p>&nbsp;</p>
                                    }
                                    <a class="btn btn-default" href="@date.Href">@date.CallToAction</a>
                                </div>
                            </div>
                        </div>
                    }

                }
            </div><!-- /.row -->
        </div>
    </div><!-- /.container -->
</div>